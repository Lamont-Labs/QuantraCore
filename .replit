modules = ["bash", "python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["google-docs:1.0.0", "twilio:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["alsa-lib", "arrow-cpp", "at-spi2-atk", "at-spi2-core", "atk", "cairo", "cups", "dbus", "ffmpeg", "ffmpeg-full", "freefont_ttf", "freetype", "gdk-pixbuf", "ghostscript", "gitFull", "glibcLocales", "gobject-introspection", "graphviz", "gtk3", "libdrm", "libgbm", "libiconv", "libxcrypt", "libxkbcommon", "libyaml", "mesa", "nspr", "nss", "ocl-icd", "oneDNN", "opencl-headers", "openssl", "pango", "pkg-config", "playwright-driver", "qhull", "re2", "tcl", "tk", "xdg-utils", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXrandr", "xorg.libxcb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ApexDesk Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Alpha Factory Dashboard"

[[workflows.workflow]]
name = "FastAPI Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn src.quantracore_apex.server.app:app --host 0.0.0.0 --port 8000 --workers 4"
waitForPort = 8000

[[workflows.workflow]]
name = "ApexDesk Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd dashboard && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Alpha Factory Dashboard"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd static && python -m http.server 8080"
waitForPort = 8080

